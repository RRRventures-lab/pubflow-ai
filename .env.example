# ============================================================================
# PubFlow AI - Docker Compose Environment Configuration
# Copy this file to .env and configure for your environment
# ============================================================================

# --------------------------------------------------------------------------
# General
# --------------------------------------------------------------------------
VERSION=1.0.0
NODE_ENV=production

# --------------------------------------------------------------------------
# Service Ports
# --------------------------------------------------------------------------
FRONTEND_PORT=3000
BACKEND_PORT=3001
BULL_BOARD_PORT=3002
DB_PORT=5432
REDIS_PORT=6379

# --------------------------------------------------------------------------
# Database Configuration
# --------------------------------------------------------------------------
DB_HOST=postgres
DB_NAME=pubflow
DB_USER=pubflow
DB_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD

# --------------------------------------------------------------------------
# Redis Configuration
# --------------------------------------------------------------------------
REDIS_HOST=redis

# --------------------------------------------------------------------------
# JWT Secrets (generate secure random strings)
# --------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_STRING_32_CHARS

# --------------------------------------------------------------------------
# CORS
# --------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000
API_BASE_URL=http://backend:3000

# --------------------------------------------------------------------------
# OpenAI API (Required for AI features)
# --------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# --------------------------------------------------------------------------
# AI Worker
# --------------------------------------------------------------------------
WORKER_CONCURRENCY=3
WORKER_POLL_INTERVAL=5000

# --------------------------------------------------------------------------
# Logging
# --------------------------------------------------------------------------
LOG_LEVEL=info

# --------------------------------------------------------------------------
# Monitoring (Optional)
# --------------------------------------------------------------------------
SENTRY_DSN=

# --------------------------------------------------------------------------
# Production Profile Settings
# --------------------------------------------------------------------------
# Uncomment for production deployment:
# COMPOSE_PROFILES=production,workers,monitoring
